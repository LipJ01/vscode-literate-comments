{
  "name": "comments-as-markdown",
  "publisher": "anton-uramer",
  "displayName": "Comments as Markdown",
  "description": "View source files as Markdown documents",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.73.0"
  },
  "repository": "https://gitlab.com/uramer/vscode-comments-as-markdown",
  "categories": [
    "Visualization"
  ],
  "license": "MIT",
  "keywords": [ "markdown", "literate", "programming", "preview" ],
  "activationEvents": [
    "onCommand:comments-as-markdown.preview",
    "onCommand:comments-as-markdown.previewToSide",
    "onCommand:comments-as-markdown.codeLensPreview",
    "onStartupFinished"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Preview",
        "command": "comments-as-markdown.preview",
        "category": "Comments as Markdown"
      },
      {
        "title": "Preview to the side",
        "command": "comments-as-markdown.previewToSide",
        "category": "Comments as Markdown"
      }
    ],
    "configuration": {
      "title": "Comments as Markdown",
      "properties": {
        "comments-as-markdown.parsing.header": {
          "type": "string",
          "default": "```Markdown",
          "description": "Any text between the header and footer is treated as Markdown"
        },
        "comments-as-markdown.parsing.footer": {
          "type": "string",
          "default": "```",
          "description": "Any text between the header and footer is treated as Markdown"
        },
        "comments-as-markdown.codeLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens for detected Markdown blocks"
        }
      }
    }
  },
  "scripts": {
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@types/webpack-env": "^1.18.0",
    "assert": "^2.0.0",
    "process": "^0.11.10"
  }
}
